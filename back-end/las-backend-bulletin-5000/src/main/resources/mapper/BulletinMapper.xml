<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.las.lasbackendbulletin5000.mapper.BulletinMapper">


    <select id="getBulletinList" resultType="com.las.lasbackendbulletin5000.model.Bulletin">
        select * from bulletin
    </select>

    <select id="getBulletinById" resultType="com.las.lasbackendbulletin5000.model.Bulletin" parameterType="int">
        select * from bulletin where id = #{id}
    </select>

    <select id="getBulletinByPublisher" resultType="com.las.lasbackendbulletin5000.model.Bulletin" parameterType="string">
        select * from bulletin where publisher = #{publisher}
    </select>

    <select id="getBulletinByLevel" resultType="com.las.lasbackendbulletin5000.model.Bulletin" parameterType="int">
        select * from bulletin where level = #{level}
    </select>

    <select id="getBulletinByTime" resultType="com.las.lasbackendbulletin5000.model.Bulletin" parameterType="string">
        select * from bulletin where time = #{time}
    </select>

    <select id="getBulletinByTitle" resultType="com.las.lasbackendbulletin5000.model.Bulletin" parameterType="string">
        select * from bulletin where title = #{title}
    </select>

    <select id="getBulletinBySticky" resultType="com.las.lasbackendbulletin5000.model.Bulletin" parameterType="boolean">
        select * from bulletin where sticky = #{sticky}
    </select>

    <insert id="addBulletin" parameterType="com.las.lasbackendbulletin5000.model.Bulletin">
        insert into bulletin(id, publisher, level, time, title, body, sticky) value (#{id},#{publisher},#{level},#{time},#{title},#{body},#{sticky})
   </insert>

    <delete id="deleteBulletinByTitle" parameterType="com.las.lasbackendbulletin5000.model.Bulletin">
        delete from bulletin where title = #{title}
    </delete>

    <update id="update">
        update bulletin
        set id = #{id},
            publisher = #{publisher},
            level = #{level},
            time = #{time},
            title = #{title},
            body = #{body},
            sticky = #{sticky}
        where
            id = #{id}
    </update>

</mapper>